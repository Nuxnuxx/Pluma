#  Dockerfile for Node Express Backend
FROM node:15.1-alpine

# Ajout de dumb init pour le PID 1
RUN apk add dumb-init

WORKDIR /app

# Create App Directory
COPY ./package*.json /app/
COPY /src/ /app

# Installing dependencies.
RUN npm i

EXPOSE 3001

CMD ["dumb-init","npm","run","prod"]
